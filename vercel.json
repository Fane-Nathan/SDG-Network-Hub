{
    "version": 2,
    "buildCommand": "npm install && npm run build",
    "builds": [
        {
            "src": "api/index.php",
            "use": "vercel-php@0.7.4"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/public/favicon.ico"
        },
        {
            "src": "/robots.txt",
            "dest": "/public/robots.txt"
        },
        {
            "src": "/sdg-icon.jpg",
            "dest": "/public/sdg-icon.jpg"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}